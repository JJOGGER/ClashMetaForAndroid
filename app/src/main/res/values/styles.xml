<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 加载对话框样式 -->
    <style name="LoadingDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 沉浸式状态栏样式 -->
    <style name="ImmersiveStatusBarStyle">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    
    <style name="AccentButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/accent_button_text_color</item>
        <item name="backgroundTint">@color/accent_button_background_color</item>
    </style>
    
<!--    <color name="accent_button_text_color">#7FC882</color>-->
<!--    <color name="accent_button_background_color">#0F1419</color>-->
    
    <style name="CommonButton">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="roundColorAngle">270</item>
        <item name="roundStartColor">@color/main_start</item>
        <item name="roundCenterColor">@color/main_center</item>
        <item name="roundEndColor">@color/main_end</item>
        <item name="roundCornerRadius">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
