<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 加载对话框样式 -->
    <style name="LoadingDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="CoomonDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 黑暗度-->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!-- 沉浸式状态栏样式 -->
    <style name="ImmersiveStatusBarStyle">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    
    <style name="AccentButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/accent_button_text_color</item>
        <item name="backgroundTint">@color/accent_button_background_color</item>
    </style>
    
    <!-- Material Components styles -->
    <style name="Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
<!--    <color name="accent_button_text_color">#7FC882</color>-->
<!--    <color name="accent_button_background_color">#0F1419</color>-->
    
    <style name="CommonButton">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="roundColorAngle">270</item>
        <item name="roundBackgroundColor">@color/primary</item>
        <item name="roundCornerRadius">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
