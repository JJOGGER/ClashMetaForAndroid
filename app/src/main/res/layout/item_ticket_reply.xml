<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- 时间分隔线 -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="11sp"
        android:textColor="@color/text_tertiary"
        android:layout_marginBottom="12dp" />

    <!-- 消息气泡容器 -->
    <LinearLayout
        android:id="@+id/llMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 左侧消息（客服） -->
        <LinearLayout
            android:id="@+id/llAdminMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start"
            android:visibility="gone">

            <com.xboard.ui.round.RoundTextView
                android:id="@+id/tvMessageAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:text="消息内容"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:padding="12dp"
                app:roundBackgroundColor="@color/bg_secondary"
                app:roundCornerRadius="12dp" />

        </LinearLayout>

        <!-- 右侧消息（用户） -->
        <LinearLayout
            android:id="@+id/llUserMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <com.xboard.ui.round.RoundTextView
                android:id="@+id/tvMessageUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:text="消息内容"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="12dp"
                app:roundBackgroundColor="@color/primary"
                app:roundCornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
