<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:orientation="vertical">

    <!-- 顶部 AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/bg_primary"
        android:paddingHorizontal="8dp"
        app:navigationIcon="@drawable/icon_back"
        app:navigationIconTint="@color/text_primary"
        app:title="问题详情"
        app:titleTextColor="@color/text_primary">

        <TextView
            android:id="@+id/tvTicketStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="处理中"
            android:textColor="@color/primary"
            android:textSize="12sp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- 消息列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReplies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <!-- 底部输入框（未关闭时显示） -->
    <LinearLayout
        android:id="@+id/llReplyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_secondary"
        android:orientation="vertical"
        android:padding="12dp">

        <EditText
            android:id="@+id/etReply"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="12dp"
            android:background="@color/bg_primary"
            android:gravity="top"
            android:hint="输入回复内容..."
            android:minLines="3"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_tertiary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.xboard.ui.round.RoundTextView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="关闭问题"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:roundBackgroundColor="@color/text_secondary"
                app:roundCornerRadius="8dp" />

            <com.xboard.ui.round.RoundTextView
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:roundBackgroundColor="@color/primary"
                app:roundCornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 已关闭提示 -->
    <LinearLayout
        android:id="@+id/llClosedTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/bg_secondary"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题已关闭，无法继续回复"
            android:textColor="@color/text_secondary"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>
