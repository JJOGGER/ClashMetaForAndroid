<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_primary"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp"
        android:text="访问控制模式"
        android:textColor="@color/primary_main_light"
        android:textSize="16dp"
        android:textStyle="bold" />

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_secondary" />

    <!-- 选项1：允许所有应用 -->
    <FrameLayout
        android:id="@+id/option_allow_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="允许所有应用"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <com.xboard.ui.round.RoundView
            android:id="@+id/v_option1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            app:roundCornerRadius="10dp"
            app:roundStrokeColor="@color/check_item_round" />
    </FrameLayout>


    <!-- 选项2：仅允许代理应用 -->
    <FrameLayout
        android:id="@+id/option_allow_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/v_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="仅允许已选择的应用"
            android:textColor="@color/text_primary"
            android:textSize="16dp" />

        <com.xboard.ui.round.RoundView
            android:id="@+id/v_option3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            app:roundCornerRadius="10dp"
            app:roundStrokeColor="@color/check_item_round" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/option_deny_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="不允许已选择的应用"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <com.xboard.ui.round.RoundView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            app:roundCornerRadius="10dp"
            app:roundStrokeColor="@color/check_item_round" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.xboard.ui.round.RoundTextView
            android:id="@+id/v_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_secondary"
            android:textSize="16dp"
            app:roundBackgroundColor="@color/bg_secondary"
            app:roundCornerRadius="50dp" />
        <com.xboard.ui.round.RoundTextView
            android:id="@+id/v_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:roundBackgroundColor="@color/primary"
            app:roundCornerRadius="50dp" />
    </LinearLayout>
</LinearLayout>
