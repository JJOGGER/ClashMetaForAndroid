<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <com.xboard.ui.round.SlidingTabLayout
        android:id="@+id/mode_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/img_hero"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/home_icon" />


    <com.xboard.ui.round.RoundTextView
        android:id="@+id/btn_connect"
        style="@style/CommonButton"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:text="开启连接"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_connection_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="00:00:00"
        android:visibility="gone"
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.xboard.ui.round.RoundConstraintLayout
        android:id="@+id/card_selected_node"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:roundCornerRadius="30dp"
        android:visibility="gone"
        app:roundStrokeColor="@color/text_tertiary"
        app:roundStrokeWidth="1dp">

        <com.github.kr328.clash.design.view.RoundedImageView
            android:id="@+id/iv_node_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_launcher_foreground"
            app:cornerRadius="60dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_selected_node_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_node_icon"
            app:layout_constraintStart_toEndOf="@id/iv_node_icon"
            app:layout_constraintTop_toTopOf="@id/iv_node_icon" />


        <ImageView
            android:id="@+id/node_status_dot"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.xboard.ui.round.RoundView
            android:id="@+id/v_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/node_status_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:roundBackgroundColor="@color/primary_light"
            app:roundCornerRadius="10dp" />
        <TextView
            android:id="@+id/tv_selected_node_latency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="--"
            android:textColor="@color/primary_light"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v_dot"
            app:layout_constraintTop_toTopOf="parent" />

    </com.xboard.ui.round.RoundConstraintLayout>

</LinearLayout>
