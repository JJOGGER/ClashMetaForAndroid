<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/v_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="48dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_back" />
        </FrameLayout>

    </FrameLayout>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_logo" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:letterSpacing="0.02"
        android:text="欢迎来到加速器"
        android:textColor="@color/text_primary"
        android:textSize="32dp"
        android:textStyle="bold" />

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="@dimen/login_padding"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="@dimen/login_padding"
        android:hint="邮箱地址"
        android:textColorHint="@color/text_tertiary"
        app:boxBackgroundColor="@color/bg_secondary"
        app:boxStrokeColor="@color/stroke"
        app:boxStrokeWidth="1.5dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:minHeight="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/text_primary"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/ll_email_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:hint="验证码"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxBackgroundColor="@color/bg_secondary"
            app:boxStrokeColor="@color/stroke"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="@color/text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:minHeight="52dp"
                android:layout_marginStart="@dimen/login_padding"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="15sp"
                app:hintTextColor="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send_code"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/login_padding"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:letterSpacing="0.05"
            android:minWidth="96dp"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:rippleColor="@color/primary_dark" />

    </LinearLayout>

    <!-- Password Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="请输入密码"
        android:layout_marginStart="@dimen/login_padding"
        android:layout_marginEnd="@dimen/login_padding"
        android:textColorHint="@color/text_tertiary"
        app:boxBackgroundColor="@color/bg_secondary"
        app:boxStrokeColor="@color/stroke"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxStrokeWidth="1.5dp"
        app:endIconMode="password_toggle"
        app:hintTextColor="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:minHeight="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/text_primary"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="请确认密码"
        android:textColorHint="@color/text_tertiary"
        app:boxBackgroundColor="@color/bg_secondary"
        app:boxStrokeColor="@color/stroke"
        app:boxStrokeWidth="1.5dp"
        app:endIconMode="password_toggle"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        android:layout_marginStart="@dimen/login_padding"
        android:layout_marginEnd="@dimen/login_padding"
        app:hintTextColor="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:minHeight="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/text_primary"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Invite Code Input (Register Mode) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邀请码（可选）"
        android:textColorHint="@color/text_tertiary"
        app:boxBackgroundColor="@color/bg_secondary"
        app:boxStrokeColor="@color/stroke"
        app:boxStrokeWidth="1.5dp"
        app:endIconMode="clear_text"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginStart="@dimen/login_padding"
        android:layout_marginEnd="@dimen/login_padding"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:endIconTint="@color/text_secondary"
        app:hintTextColor="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/text_primary"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:id="@+id/ll_agreement"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="我已阅读并同意"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="《用户协议》"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="《隐私政策》"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>


    <com.xboard.ui.round.RoundTextView
        android:id="@+id/btn_regist"
        style="@style/CommonButton"
        android:text="注册" />
    <!-- Toggle Mode -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_toggle_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="去登录"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>



